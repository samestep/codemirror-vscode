{
  "publisher": "samestep",
  "name": "codemirror",
  "version": "0.0.0",
  "displayName": "CodeMirror",
  "description": "CodeMirror as a VS Code extension.",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samestep/codemirror-vscode"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codemirror.open",
        "title": "Open in CodeMirror"
      }
    ],
    "configuration": {
      "properties": {
        "codemirror.extensions": {
          "description": "Commands to call to get URIs for CodeMirror extension bundles.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "codemirror.extension.basicSetup",
            "codemirror.extension.vscodeDark"
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@babel/runtime": "^7",
    "@codemirror/autocomplete": "^6",
    "@codemirror/collab": "^6",
    "@codemirror/commands": "^6",
    "@codemirror/lang-angular": "^0.1",
    "@codemirror/lang-cpp": "^6",
    "@codemirror/lang-css": "^6",
    "@codemirror/lang-go": "^6",
    "@codemirror/lang-html": "^6",
    "@codemirror/lang-java": "^6",
    "@codemirror/lang-javascript": "^6",
    "@codemirror/lang-json": "^6",
    "@codemirror/lang-less": "^6",
    "@codemirror/lang-lezer": "^6",
    "@codemirror/lang-liquid": "^6",
    "@codemirror/lang-markdown": "^6",
    "@codemirror/lang-php": "^6",
    "@codemirror/lang-python": "^6",
    "@codemirror/lang-rust": "^6",
    "@codemirror/lang-sass": "^6",
    "@codemirror/lang-sql": "^6",
    "@codemirror/language": "^6",
    "@codemirror/language-data": "^6",
    "@codemirror/lang-vue": "^0.1",
    "@codemirror/lang-wast": "^6",
    "@codemirror/lang-xml": "^6",
    "@codemirror/lang-yaml": "^6",
    "@codemirror/lint": "^6",
    "@codemirror/merge": "^6",
    "@codemirror/search": "^6",
    "@codemirror/state": "^6",
    "@codemirror/theme-one-dark": "^6",
    "@codemirror/view": "^6",
    "@lezer/common": "^1",
    "@lezer/cpp": "^1",
    "@lezer/css": "^1",
    "@lezer/generator": "^1",
    "@lezer/go": "^1",
    "@lezer/highlight": "^1",
    "@lezer/html": "^1",
    "@lezer/java": "^1",
    "@lezer/javascript": "^1",
    "@lezer/json": "^1",
    "@lezer/lezer": "^1",
    "@lezer/lr": "^1",
    "@lezer/markdown": "^1",
    "@lezer/php": "^1",
    "@lezer/python": "^1",
    "@lezer/rust": "^1",
    "@lezer/sass": "^1",
    "@lezer/xml": "^1",
    "@lezer/yaml": "^1",
    "@resvg/resvg-js-cli": "^2.6.2-beta.1",
    "@types/node": "^22",
    "@types/vscode": "^1",
    "@types/vscode-webview": "^1",
    "@uiw/codemirror-theme-vscode": "^4",
    "@vscode/vsce": "^3",
    "codemirror": "^6",
    "esbuild": "^0.25",
    "handlebars": "^4",
    "prettier-plugin-organize-imports": "^4"
  },
  "scripts": {
    "svg": "wget --no-clobber https://raw.githubusercontent.com/codemirror/website/b7247cacfcd389e359a038a41fff679185538ef8/site/style/logo.svg",
    "png": "resvg-js logo.svg logo.png",
    "dist": "rm -rf dist && node build.mjs",
    "vsix": "vsce package",
    "build": "npm run svg && npm run png && npm run dist && npm run vsix"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
