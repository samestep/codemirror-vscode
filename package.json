{
  "publisher": "samestep",
  "name": "codemirror",
  "version": "0.0.0",
  "displayName": "CodeMirror",
  "description": "CodeMirror as a VS Code extension.",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samestep/codemirror-vscode"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codemirror.open",
        "title": "Open in CodeMirror"
      }
    ]
  },
  "devDependencies": {
    "@babel/runtime": "^7",
    "@codemirror/state": "^6",
    "@resvg/resvg-js-cli": "^2.6.2-beta.1",
    "@types/node": "^22",
    "@types/vscode": "^1",
    "@types/vscode-webview": "^1",
    "@uiw/codemirror-theme-vscode": "^4",
    "@vscode/vsce": "^3",
    "codemirror": "^6",
    "esbuild": "^0.25",
    "handlebars": "^4",
    "prettier-plugin-organize-imports": "^4"
  },
  "scripts": {
    "svg": "wget --no-clobber https://raw.githubusercontent.com/codemirror/website/b7247cacfcd389e359a038a41fff679185538ef8/site/style/logo.svg",
    "png": "resvg-js logo.svg logo.png",
    "webview": "esbuild src/webview.ts --bundle --format=iife --outfile=dist/webview.js",
    "extension": "esbuild src/extension.ts --bundle --format=cjs --platform=node --external:vscode --outfile=dist/extension.js",
    "vsix": "vsce package",
    "build": "npm run svg && npm run png && npm run webview && npm run extension && npm run vsix"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
