{
  "publisher": "samestep",
  "name": "codemirror",
  "version": "0.0.0",
  "displayName": "CodeMirror",
  "description": "CodeMirror as a VS Code extension.",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samestep/codemirror-vscode"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codemirror.open",
        "title": "Open in CodeMirror"
      }
    ],
    "configuration": {
      "properties": {
        "codemirror.extensions": {
          "description": "Commands to call to get URIs for CodeMirror extension bundles.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "codemirror.extension.basicSetup",
            "codemirror.extension.vscodeDark"
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@babel/runtime": "^7",
    "@codemirror/state": "^6",
    "@resvg/resvg-js-cli": "^2.6.2-beta.1",
    "@types/node": "^22",
    "@types/vscode": "^1",
    "@types/vscode-webview": "^1",
    "@uiw/codemirror-theme-vscode": "^4",
    "@vscode/vsce": "^3",
    "codemirror": "^6",
    "esbuild": "^0.25",
    "handlebars": "^4",
    "prettier-plugin-organize-imports": "^4"
  },
  "scripts": {
    "svg": "wget --no-clobber https://raw.githubusercontent.com/codemirror/website/b7247cacfcd389e359a038a41fff679185538ef8/site/style/logo.svg",
    "png": "resvg-js logo.svg logo.png",
    "codemirror-state": "esbuild src/codemirror-state.ts --bundle --format=esm --outfile=dist/codemirror-state.js",
    "codemirror-view": "esbuild src/codemirror-view.ts --bundle --format=esm --external:@codemirror/state --outfile=dist/codemirror-view.js",
    "codemirror": "npm run codemirror-state && npm run codemirror-view",
    "extension:basicSetup": "esbuild src/extensions/basicSetup.ts --bundle --format=esm --external:@codemirror/state --external:@codemirror/view --outfile=dist/extensions/basicSetup.js",
    "extension:vscodeDark": "esbuild src/extensions/vscodeDark.ts --bundle --format=esm --external:@codemirror/state --external:@codemirror/view --outfile=dist/extensions/vscodeDark.js",
    "extensions": "npm run extension:basicSetup && npm run extension:vscodeDark",
    "webview": "esbuild src/webview.ts --bundle --format=esm --external:@codemirror/state --external:@codemirror/view --outfile=dist/webview.js",
    "extension": "esbuild src/extension.ts --bundle --format=cjs --platform=node --external:vscode --outfile=dist/extension.js",
    "vsix": "vsce package",
    "build": "npm run svg && npm run png && npm run codemirror && npm run extensions && npm run webview && npm run extension && npm run vsix"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
